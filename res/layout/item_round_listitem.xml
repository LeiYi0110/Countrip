<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="322dp" >

    <FrameLayout
        android:id="@+id/haha"
        android:layout_width="match_parent"
        android:layout_height="256dp" >

        <android.support.v4.view.ViewPager
            android:id="@+id/list_pic"
            android:layout_width="fill_parent"
            android:layout_height="256dp" />

        <TextView
            android:id="@+id/img_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="225dp"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/haha"
        android:background="@color/white" >

        <TextView
            android:id="@+id/sleep_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="11dp"
            android:textColor="#6f7376"
            android:textSize="11.5sp" />

        <RelativeLayout
            android:id="@+id/love_it"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp" >

            <ImageView
                android:id="@+id/sleep_love_img"
                android:layout_width="17dp"
                android:layout_height="15dp"
                android:src="@drawable/lovef" />

            <TextView
                android:layout_toRightOf="@+id/sleep_love_img"
                android:layout_width="wrap_content"
                android:id="@+id/collection_count"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="10.5sp"
                android:textColor="@color/huise" />
        </RelativeLayout>
        
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/to_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="35dp" >

            <ImageView
                android:id="@+id/sleep_comment_img"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:src="@drawable/comment" />

            <TextView
                android:layout_toRightOf="@+id/sleep_comment_img"
                android:id="@+id/sleep_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100+"
                android:textSize="10sp"
                android:textColor="@color/huise" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/show_distance" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="35dp"
            >
 
            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距离"
                android:textSize="10.5sp"
                android:textColor="#82898d" />
            
        </RelativeLayout>
        
    </RelativeLayout>
	
    
</RelativeLayout>