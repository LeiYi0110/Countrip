<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f0f0f0"
    android:orientation="vertical" >

    <!-- 头部 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:src="@drawable/back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="电话绑定"
                android:textColor="@color/tophui"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="21dp"
            android:text="提交"
            android:textColor="@color/press"
            android:textSize="14sp" />
    </RelativeLayout>

    <!-- 分隔线 -->

    <include
        android:layout_width="358dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        layout="@layout/layout_divider" />
    
    <!-- 修改电话 -->

    <RelativeLayout
        android:layout_width="358dp"
        android:layout_height="57dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:text="手机号"
            android:textColor="@color/tophui"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/band_phone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="46dp"
            android:layout_toRightOf="@+id/nick_name"
            android:layout_toLeftOf="@+id/yanma"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入新的手机号"
            android:singleLine="true"
            android:phoneNumber="true"
            android:layout_marginRight="9dp"
            android:textColor="#aaaaaa"
            android:textSize="15sp" />
        
        <TextView
            android:id="@+id/yanma" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textColor="#ff8400"
            android:textSize="13sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="21dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <!-- 分隔线 -->

    <include
        android:layout_width="358dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        layout="@layout/layout_divider" />
	
	<!-- 填写验证码 -->
    <RelativeLayout
        android:layout_width="358dp"
        android:layout_height="57dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:text="验证码"
            android:textColor="@color/tophui"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/input_yanma"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="46dp"
            android:layout_toRightOf="@+id/nick_name"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:singleLine="true"
            android:layout_marginRight="10dp"
            android:numeric="integer"
            android:textColor="#aaaaaa"
            android:textSize="15sp" />
    </RelativeLayout>
    <!-- 分隔线 -->

    <include
        android:layout_width="358dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        layout="@layout/layout_divider" />
</LinearLayout>