<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="27dp"
    android:gravity="center_horizontal"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        >

        <!-- 头像 -->

        <ImageView
            android:id="@+id/face"
            android:layout_width="70dp"
            android:layout_height="70dp"
             />
        <!-- 右边文字描述 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="路人甲"
                    android:textColor="#373737"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="2015-07-05"
                    android:textColor="#82898d"
                    android:textSize="10sp" />
            </RelativeLayout>

            <!-- 心型评分 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginTop="5dp"
                android:gravity="left" >

                <RatingBar
                    android:id="@+id/ratingbar"
                    style="@style/roomRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="1.5"
                    android:stepSize="0.5" />
            </RelativeLayout>

            <!-- 评价文字 -->

            <TextView
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:lines="2"
                android:text="本章内容是 android.widget.RatingBar，译为评分条，版本为Android 2.2 r1，翻译来自madgoawallace2010欢迎大家访问他们的博客：http://madgoat.cn/、http://blog.csdn.net/springiscoming2008，再次感谢adgoawallace20期待你加入Android中文翻译组，联系我over140@gmail.com"
                android:textColor="#373737"
                android:textSize="12sp" />
            <!-- 上传图片 -->

            <LinearLayout
                android:id="@+id/upload_img"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
	
    <View
        android:layout_marginTop="27dp" 
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/divider_list"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        />
</LinearLayout>