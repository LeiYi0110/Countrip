<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="27dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="24dp"
        android:paddingRight="24dp" >

        <!-- 头像 -->

        <ImageView
            android:id="@+id/face"
            android:layout_width="70dp"
            android:layout_height="70dp"
           />
        <!-- 右边文字描述 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="路人甲"
                    android:textColor="#373737"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="2015-07-05"
                    android:textColor="#82898d"
                    android:textSize="10sp" />
            </RelativeLayout>

            <!-- 心型评分 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginTop="5dp"
                android:gravity="left" >

                <RatingBar
                    android:id="@+id/ratingbar"
                    style="@style/roomRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="1.5"
                    android:stepSize="0.5" />
            </RelativeLayout>

            <!-- 评价文字 -->

            <TextView
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:lines="2"
                android:text="本章内容是 android.widget.RatingBar，译为评分条，版本为Android 2.2 r1，翻译来自madgoawallace2010欢迎大家访问他们的博客：http://madgoat.cn/、http://blog.csdn.net/springiscoming2008，再次感谢adgoawallace20期待你加入Android中文翻译组，联系我over140@gmail.com"
                android:textColor="#373737"
                android:textSize="12sp" />
            <!-- 上传图片 -->

            <LinearLayout
                android:id="@+id/upload_img"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_marginTop="32dp" >
        <TextView
            android:id="@+id/txt_useful" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有用2"
            android:textColor="#82898d"
            android:textSize="10sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            />y
        <TextView
            android:id="@+id/txt_pinglun" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论1"
            android:layout_toRightOf="@+id/txt_useful"
            android:layout_marginLeft="26dp"
            android:layout_centerVertical="true"
            android:textColor="#82898d"
            android:textSize="10sp"
            />
        
        <ImageView
            android:id="@+id/pinglun" 
            android:layout_width="42dp"
            android:layout_height="22dp"
            android:src="@drawable/pinglun"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="24dp"
            />
        <ImageView
            android:id="@+id/dianzan" 
            android:layout_width="42dp"
            android:layout_height="22dp"
            android:src="@drawable/dianzan"
            android:layout_toLeftOf="@+id/pinglun"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="24dp"
            />
        
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="#e2e2e2" />
    <View
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:background="@color/f0f0f0" />
	
</LinearLayout>