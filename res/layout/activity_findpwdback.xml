<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/denglu_bg" >

    <!-- 头部 -->

    <RelativeLayout
        android:id="@+id/qqq1"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:background="@null" >

        <RelativeLayout
            android:id="@+id/fpwb_back"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="17dp"
                android:src="@drawable/back_white" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="找回密码"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <!-- 找回密码 -->

    <LinearLayout
        android:id="@+id/www1"
        android:layout_width="330dp"
        android:layout_height="186dp"
        android:layout_below="@+id/qqq1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/findpswback_bg"
        android:orientation="vertical" >

        <!-- 手机号 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:hint="手机号"
                android:textColorHint="#a5000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/phone_num"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="36dp"
                android:background="@null"
                android:hint="请输入您注册使用的手机号"
                android:phoneNumber="true"
                android:singleLine="true"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 验证码 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:hint="验证码"
                android:textColorHint="#a5000000"
                android:textSize="15sp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="36dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="验证码"
                android:numeric="integer"
                android:singleLine="true"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.2"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/get_yanma"
                    android:layout_width="99dp"
                    android:layout_height="32dp"
                    android:background="@drawable/hqyzm"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

        <!-- 新密码 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:hint="新密码"
                android:textColorHint="#a5000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/pwd_one"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="36dp"
                android:background="@null"
                android:hint="新密码"
                android:password="true"
                android:singleLine="true"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:hint="重复密码"
                android:textColorHint="#a5000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/pwd_two"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:hint="重复密码"
                android:password="true"
                android:singleLine="true"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 提交申请按钮 -->

    <RelativeLayout
        android:id="@+id/eee1"
        android:layout_width="330dp"
        android:layout_height="39dp"
        android:layout_below="@+id/www1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/chengse_bg"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交申请"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>