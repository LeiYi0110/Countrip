<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="117dp"
        android:layout_height="85dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/zaixianfu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/item_img"
        android:text="在线付"
        android:textColor="#8c8a8a"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zaixianfu"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/item_img"
        android:text="大床(含双早)"
        android:textColor="#8c8a8a"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="26dp"
        android:text="1606"
        android:textColor="#565a5c"
        android:textSize="19sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/item_price"
        android:layout_toLeftOf="@+id/item_price"
        android:text="¥"
        android:textColor="#565a5c"
        android:textSize="13sp" />

    <RelativeLayout
        android:id="@+id/want_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_price"
        android:layout_marginRight="15dp"
        android:layout_marginTop="13dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我要预定"
            android:textColor="#ff6a6f"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/item_img"
        android:layout_marginTop="18dp"
        android:background="@drawable/divider_list" />

</RelativeLayout>